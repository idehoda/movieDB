<!DOCTYPE html>
    <head>
            <link href="https://fonts.googleapis.com/css?family=Karla" rel="stylesheet">
            <link rel="stylesheet" type="text/css" href="/css/movieComments.css"> 
    </head>
    <body>
        <div class="main">
            <div class="movie__head">      
                <h1><%= mov.Title %> -  comments </h1>   
                <a class = "btn-back" href="/movies">&larr; Back</a> 
            </div>
            <div class = "movie"> 
                <div class="movie__img-containter">
                    <img class = "movie__poster" src= <%= mov.Poster %> alt="movies poster">
                </div>                  
                <ul class="movie__comments">
                    <% mov.Comments.forEach(function(comment) { %>
                        <li><%=comment%></li>
                    <% }); %>
                </ul>                
            </div>                      
        </div>    
    </body>
</html>
    
     
       
    